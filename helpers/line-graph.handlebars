<svg viewBox="0 0 {{ width }} {{ height }}" fill="currentcolor">
  <style>
    .label {
      font-size: 12px;
      font-weight: bold;
      opacity: 0.5;
    }
    .rule {
      fill: none;
      stroke: currentcolor;
      opacity: 0.5;
    }
  </style>
  <path d="{{ d }}"/>
  <g transform="translate(0 0.5)">
    {{#each rules }}
      <path d="M0 {{ y }} H{{ ../width }}" class="rule"/>
      <text y="{{ textY }}" class="label">{{ value }}</text>
    {{/each}}
  </g>
</svg>
